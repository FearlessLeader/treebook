<div class="page-header">
  <h1>All of the Statuses</h1>
</div>

<div class="row">
  <div class="post_status_btn col-md-1">
    <%= link_to 'Post a New Status', new_status_path, class: "btn btn-success" %>
  </div>
</div>

<% @statuses.each do |status| %>
  <div class="status">
    <div class="row">

      <div class="col-md-1">
        <%= image_tag status.user.gravatar_url %>
      </div>

      <div class="col-md-4">
        <strong> <%= status.user.full_name %> </strong>
        <p><%= status.content %></p>
        <div class="meta">
          <%= link_to time_ago_in_words(status.created_at) + " ago" , status %>
          <span class="admin">
            | <%= link_to 'Edit', edit_status_path(status) %> | 
            <%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' } %>
          </span>
        </div>
      </div>

      <div class="col-md-6">
        <span></span>
      </div>
      
    </div>
  </div>
<% end %>